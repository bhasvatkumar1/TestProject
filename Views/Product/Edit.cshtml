@using MVCCRUDSHOP.ViewModels
@model ProductViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Product</h2>
<html>
<body>

    <input type="hidden" value="@Model.ProductId" name="ProductId" id="ProductId">

    <div class="container">

        <div class="form-group">
            <label for="Name">Category Name</label>
        </div>
        <div class="form-group">
            <input type="text" value="@Model.CategoryName" name="CategoryName" id="CategoryName" readonly>
        </div>
        <div class="form-group">
            <label for="Name">Product Name</label>
        </div>
        <div class="form-group">
            <input type="text" value="@Model.ProductName" name="ProductName" id="ProductName">
        </div>
        <div class="form-group">
            <label for="Price">Product Price</label>
        </div>
        <div class="form-group">
            <input type="text" value="@Model.ProductPrice" name="ProductPrice" id="ProductPrice">
        </div>

        <div class="form-group">
            <button type="button" onclick="UpdateProduct()">Save</button>

        </div>

    </div>
